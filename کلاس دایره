import math

class circle:
    def __init__(self,radius):
        self.radius = radius

    def s(self):
        return math.pi * self.radius**2

    def p(self):
        return 2 * math.pi * self.radius
    def __del__(self):
        print("circle deleted")
        


my_circle = circle(int(input()))

print("s: ", my_circle.s())


print("p: ", my_circle.p())

my_circle.__del__
